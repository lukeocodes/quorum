{
  "name": "@quorum/nx",
  "version": "0.1.0",
  "description": "A Slack-like app for discussions between humans and AIs - NX Monorepo",
  "private": true,
  "scripts": {
    "setup": "nx run-many --target=build --projects=proto,ui,auth-client,server-client,app-state,realtime,platform,storage,theme,utils",
    "dev": "nx run app-electron:dev",
    "dev:all": "npm run setup && nx run-many --target=dev --projects=app-electron,api-core,api-server,console --parallel=4",
    "dev:electron": "nx run app-electron:dev",
    "dev:api": "npm run setup && nx run api-core:dev",
    "dev:api-server": "npm run setup && nx run api-server:dev",
    "dev:apis": "npm run setup && nx run-many --target=dev --projects=api-core,api-server --parallel=3",
    "dev:console": "nx run console:dev",
    "build": "npm run setup && nx run-many --target=build --all",
    "build:electron": "nx run app-electron:build",
    "build:api": "nx run api-core:build",
    "build:console": "nx run console:build",
    "preview:console": "nx run console:preview",
    "start:api": "nx run api-core:start",
    "db:migrate": "nx run app-electron:db:migrate",
    "db:wipe:all": "npm run db:wipe:electron && npm run db:wipe:pg",
    "db:wipe:electron": "bash scripts/wipe-electron-db.sh",
    "db:wipe:pg": "node scripts/wipe-pg-db.js",
    "package:electron": "nx run app-electron:package",
    "graph": "nx graph",
    "reset": "nx reset"
  },
  "keywords": [
    "monorepo",
    "nx",
    "electron",
    "astro",
    "express",
    "ai",
    "chat",
    "discussion"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nx/eslint": "^22.1.1",
    "@nx/js": "^22.1.1",
    "@nx/vite": "^22.1.1",
    "@nx/workspace": "^22.1.1",
    "dotenv": "^16.4.7",
    "nx": "^22.1.1",
    "pg": "^8.11.3"
  }
}