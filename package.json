{
  "name": "@quorum/nx",
  "version": "0.1.0",
  "description": "A Slack-like app for discussions between humans and AIs - NX Monorepo",
  "private": true,
  "scripts": {
    "setup": "nx run types:build && nx run api-client:build && nx run components:build",
    "dev": "nx run electron:dev",
    "dev:all": "npm run setup && nx run-many --target=dev --projects=electron,api,web --parallel",
    "dev:electron": "nx run electron:dev",
    "dev:api": "npm run setup && nx run api:dev",
    "dev:web": "nx run web:dev",
    "build": "npm run setup && nx run-many --target=build --all",
    "build:electron": "nx run electron:build",
    "build:api": "nx run api:build",
    "build:web": "nx run web:build",
    "preview:web": "nx run web:preview",
    "start:api": "nx run api:start",
    "db:migrate": "nx run electron:db:migrate",
    "db:wipe:all": "npm run db:wipe:electron && npm run db:wipe:pg",
    "db:wipe:electron": "bash scripts/wipe-electron-db.sh",
    "db:wipe:pg": "node scripts/wipe-pg-db.js",
    "package:electron": "nx run electron:package",
    "graph": "nx graph",
    "reset": "nx reset"
  },
  "keywords": [
    "monorepo",
    "nx",
    "electron",
    "astro",
    "express",
    "ai",
    "chat",
    "discussion"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nx/eslint": "^22.1.1",
    "@nx/js": "^22.1.1",
    "@nx/vite": "^22.1.1",
    "@nx/workspace": "^22.1.1",
    "dotenv": "^16.4.7",
    "nx": "^22.1.1",
    "pg": "^8.11.3"
  }
}