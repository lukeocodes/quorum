# Quorum Root Environment Configuration
# Copy this file to .env and fill in your values

# Port Configuration
API_CORE_PORT=3000
API_SERVER_PORT=3001
CONSOLE_PORT=4321
APP_WEB_PORT=4322
APP_ELECTRON_PORT=5173

# Public URLs (used by clients)
PUBLIC_API_CORE_URL=http://localhost:${API_CORE_PORT}
PUBLIC_API_SERVER_URL=http://localhost:${API_SERVER_PORT}
PUBLIC_CONSOLE_URL=http://localhost:${CONSOLE_PORT}
PUBLIC_APP_WEB_URL=http://localhost:${APP_WEB_PORT}
PUBLIC_APP_ELECTRON_URL=http://localhost:${APP_ELECTRON_PORT}

# CORS - Allowed origins for API servers
ALLOWED_ORIGINS=${PUBLIC_CONSOLE_URL},${PUBLIC_APP_WEB_URL},${PUBLIC_APP_ELECTRON_URL}

# Environment
NODE_ENV=development

# Database Configuration
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=
DB_NAME=

# Security
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=
