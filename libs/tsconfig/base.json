{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../..",
    "paths": {
      "@quorum/proto": ["libs/proto/dist/index.d.ts"],
      "@quorum/ui": ["libs/ui/dist/index.d.ts"],
      "@quorum/auth-client": ["libs/auth-client/dist/index.d.ts"],
      "@quorum/server-client": ["libs/server-client/dist/index.d.ts"],
      "@quorum/app-state": ["libs/app-state/dist/index.d.ts"],
      "@quorum/realtime": ["libs/realtime/dist/index.d.ts"],
      "@quorum/platform": ["libs/platform/dist/index.d.ts"],
      "@quorum/theme": ["libs/theme/dist/index.d.ts"],
      "@quorum/storage": ["libs/storage/dist/index.d.ts"],
      "@quorum/utils": ["libs/utils/dist/index.d.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
