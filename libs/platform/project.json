{
  "name": "platform",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/platform/src",
  "projectType": "library",
  "tags": [
    "npm:private",
    "npm:platform",
    "type:lib",
    "scope:shared"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/libs/platform/dist"
      ],
      "options": {
        "command": "tsup src/index.ts --format cjs,esm --dts",
        "cwd": "libs/platform"
      },
      "dependsOn": ["^build"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup src/index.ts --format cjs,esm --dts --watch",
        "cwd": "libs/platform"
      },
      "dependsOn": ["^build"]
    }
  }
}

