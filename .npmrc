# force pnpm as the package manager (this breaks npm and yarn)
node-linker=pnpm

# disable pre and post scripts (this breaks some packages)
enable-pre-post-scripts=false

# disable scripts (this breaks some packages)
ignore-scripts=true

# Security: Delay new package versions by 1 day to reduce supply chain attack risk
minimum-release-age=1440

# Security: Require trust level to not decrease (uncomment if using trust policies)
trust-policy=strict