---
import Layout from '@layouts/Layout.astro';
import { Hero } from '@/components/Hero';
import { Card } from '@quorum/components';
---

<Layout title="Quorum - Home">
  <main class="min-h-screen flex items-center justify-center p-4">
    <div class="max-w-4xl mx-auto">
      <Hero client:load />
      
      <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
        <Card variant="default" padding="lg">
          <h3 class="text-xl font-semibold mb-2 text-primary-600">Multi-User Collaboration</h3>
          <p class="text-text-secondary">
            Work together with your team and AI assistants in shared workspaces.
          </p>
        </Card>
        <Card variant="default" padding="lg">
          <h3 class="text-xl font-semibold mb-2 text-primary-600">Multiple AI Providers</h3>
          <p class="text-text-secondary">
            Integrate with OpenAI, Anthropic, and more for diverse AI perspectives.
          </p>
        </Card>
        <Card variant="default" padding="lg">
          <h3 class="text-xl font-semibold mb-2 text-primary-600">Secure & Private</h3>
          <p class="text-text-secondary">
            Your conversations and API keys are encrypted and stored locally.
          </p>
        </Card>
      </div>
    </div>
  </main>
</Layout>

