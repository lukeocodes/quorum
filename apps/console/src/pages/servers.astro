---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Add Server to Desktop - Quorum" showAccountSwitcher={true}>
  <div class="min-h-screen bg-gradient-to-br from-primary-50 to-primary-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-text-primary mb-2">Your Servers</h1>
        <p class="text-lg text-text-secondary">
          Manage your Quorum servers
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-3 justify-center mb-8">
        <a href="/servers/create" class="px-6 py-3 bg-selected text-text-inverse rounded-lg hover:bg-selected/90 focus:outline-none focus:ring-2 focus:ring-selected focus:ring-offset-2 transition-colors font-medium inline-flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Create Server
        </a>
        <a href="/servers/public" class="px-6 py-3 bg-primary-600 text-text-inverse rounded-lg hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors font-medium inline-flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Browse Public Servers
        </a>
        <button id="join-invite-btn" class="px-6 py-3 bg-success-600 text-text-inverse rounded-lg hover:bg-success-700 focus:outline-none focus:ring-2 focus:ring-success-500 focus:ring-offset-2 transition-colors font-medium inline-flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
          </svg>
          Join with Invite Code
        </button>
      </div>

      <!-- Loading State -->
      <div id="loading" class="text-center py-12">
        <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-selected"></div>
        <p class="mt-4 text-text-secondary">Loading your servers...</p>
      </div>

      <!-- Error State -->
      <div id="error" class="hidden bg-danger-50 border-l-4 border-danger-500 p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-danger-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <p id="error-message" class="text-sm text-danger-700"></p>
          </div>
        </div>
      </div>

      <!-- Success Message -->
      <div id="success" class="hidden bg-success-50 border-l-4 border-success-500 p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-success-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-success-700">
              Server added successfully! You can now close this window and return to the Quorum desktop app.
            </p>
          </div>
        </div>
      </div>

      <!-- Added Servers Section -->
      <div id="added-servers-section" class="hidden mb-8">
        <h2 class="text-2xl font-bold text-text-primary mb-4">Added to Desktop</h2>
        <div id="added-servers-list" class="space-y-4">
          <!-- Added servers will be dynamically inserted here -->
        </div>
      </div>

      <!-- Available Servers Section -->
      <div id="available-servers-section" class="hidden">
        <h2 class="text-2xl font-bold text-text-primary mb-4">Available Servers</h2>
        <div id="available-servers-list" class="space-y-4">
          <!-- Available servers will be dynamically inserted here -->
        </div>
      </div>

      <!-- No Servers State -->
      <div id="no-servers" class="hidden bg-off-white rounded-lg shadow-md p-8 text-center">
        <svg class="mx-auto h-12 w-12 text-text-tertiary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        <h3 class="mt-2 text-lg font-medium text-text-primary">No servers found</h3>
        <p class="mt-1 text-sm text-text-secondary">
          You don't have access to any servers yet. Create or join a server first.
        </p>
      </div>

      <!-- Back Button -->
      <div class="mt-8 text-center">
        <a href="/" class="text-selected hover:text-selected/90 font-medium">
          ‚Üê Back to Home
        </a>
      </div>
    </div>
  </div>

  <!-- Invite Code Modal -->
  <div id="invite-modal" class="hidden fixed inset-0 bg-secondary-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-off-white">
      <div class="mt-3">
        <h3 class="text-lg leading-6 font-medium text-text-primary mb-4">Join Server with Invite Code</h3>
        <input
          type="text"
          id="invite-code-input"
          placeholder="Enter invite code"
          class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-selected mb-4"
        />
        <div id="invite-error" class="hidden text-sm text-danger-600 mb-4"></div>
        <div class="flex justify-end space-x-3">
          <button
            id="invite-cancel-btn"
            class="px-4 py-2 bg-border text-text-primary rounded-md hover:bg-muted focus:outline-none focus:ring-2 focus:ring-secondary-500"
          >
            Cancel
          </button>
          <button
            id="invite-submit-btn"
            class="px-4 py-2 bg-selected text-text-inverse rounded-md hover:bg-selected/90 focus:outline-none focus:ring-2 focus:ring-selected disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Join Server
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    const apiUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:3000';
    const STORAGE_KEY = 'quorum_accounts';
    
    // Helper functions for account management
    function getAccounts() {
      try {
        const stored = localStorage.getItem(STORAGE_KEY);
        if (!stored) {
          return { accounts: [], currentUserId: null };
        }
        return JSON.parse(stored);
      } catch (error) {
        console.error('Failed to get accounts:', error);
        return { accounts: [], currentUserId: null };
      }
    }
    
    function getCurrentAccount() {
      const store = getAccounts();
      if (!store.currentUserId) {
        return null;
      }
      return store.accounts.find(acc => acc.user.id === store.currentUserId) || null;
    }
    
    function addAccount(user, token) {
      let store = getAccounts();
      const existingIndex = store.accounts.findIndex(acc => acc.user.id === user.id);
      
      if (existingIndex >= 0) {
        store.accounts[existingIndex] = {
          user,
          token,
          addedAt: store.accounts[existingIndex].addedAt,
        };
      } else {
        store.accounts.push({
          user,
          token,
          addedAt: Date.now(),
        });
      }
      
      store.currentUserId = user.id;
      localStorage.setItem(STORAGE_KEY, JSON.stringify(store));
    }

    // Try to initialize session
    async function initializeSession() {
      // First check if we have a stored account
      let currentAccount = getCurrentAccount();
      
      if (currentAccount) {
        // Update sessionStorage for backward compatibility
        sessionStorage.setItem('authToken', currentAccount.token);
        return currentAccount.token;
      }
      
      // Try to get session from cookie
      try {
        const response = await fetch(`${apiUrl}/auth/session`, {
          credentials: 'include',
        });
        
        if (response.ok) {
          const data = await response.json();
          const { user, token } = data.data;
          
          // Store account
          addAccount(user, token);
          sessionStorage.setItem('authToken', token);
          
          return token;
        }
      } catch (error) {
        console.error('Failed to initialize session from cookie:', error);
      }
      
      // Check sessionStorage as fallback
      const authToken = sessionStorage.getItem('authToken');
      if (authToken) {
        return authToken;
      }
      
      // No session found - redirect to login
      window.location.href = '/auth/login?redirect=/servers';
      return null;
    }
    
    let authToken;
    
    async function init() {
      authToken = await initializeSession();
      if (authToken) {
        fetchServers();
      }
    }
    
    init();

    interface Server {
      id: number;
      name: string;
      description: string;
      isPublic: boolean;
      role: string;
      roomCount: number;
      memberCount: number;
      isAddedToDesktop?: boolean;
      isAddedToWeb?: boolean;
    }

    // Fetch servers
    async function fetchServers() {
      try {
        const response = await fetch(`${apiUrl}/discovery/servers`, {
          headers: {
            'Authorization': `Bearer ${authToken}`,
            'Content-Type': 'application/json',
          },
          credentials: 'include',
        });

        if (!response.ok) {
          if (response.status === 401) {
            // Clear all session data and redirect
            sessionStorage.removeItem('authToken');
            const currentAccount = getCurrentAccount();
            if (currentAccount) {
              // Remove expired account
              const store = getAccounts();
              store.accounts = store.accounts.filter(acc => acc.user.id !== currentAccount.user.id);
              if (store.currentUserId === currentAccount.user.id) {
                store.currentUserId = store.accounts.length > 0 ? store.accounts[0].user.id : null;
              }
              localStorage.setItem(STORAGE_KEY, JSON.stringify(store));
            }
            window.location.href = '/auth/login?redirect=/servers';
            return;
          }
          throw new Error('Failed to fetch servers');
        }

        const data = await response.json();
        displayServers(data.data);
      } catch (error) {
        console.error('Error fetching servers:', error);
        showError('Failed to load servers. Please try again.');
      }
    }

    // Display servers
    function displayServers(servers: Server[]) {
      const loading = document.getElementById('loading')!;
      const addedSection = document.getElementById('added-servers-section')!;
      const addedList = document.getElementById('added-servers-list')!;
      const availableSection = document.getElementById('available-servers-section')!;
      const availableList = document.getElementById('available-servers-list')!;
      const noServers = document.getElementById('no-servers')!;

      loading.classList.add('hidden');

      if (servers.length === 0) {
        noServers.classList.remove('hidden');
        return;
      }

      // Separate servers into added and available
      const addedServers = servers.filter(s => s.isAddedToDesktop);
      const availableServers = servers.filter(s => !s.isAddedToDesktop);

      // Show added servers section if there are any
      if (addedServers.length > 0) {
        addedSection.classList.remove('hidden');
        addedServers.forEach((server) => {
          addedList.appendChild(createServerCard(server, true));
        });
      }

      // Show available servers section if there are any
      if (availableServers.length > 0) {
        availableSection.classList.remove('hidden');
        availableServers.forEach((server) => {
          availableList.appendChild(createServerCard(server, false));
        });
      }
    }

    // Create a server card
    function createServerCard(server: Server, isAdded: boolean) {
      const serverCard = document.createElement('div');
      serverCard.className = 'bg-off-white rounded-lg shadow-md hover:shadow-lg transition-shadow p-6';
      
      const buttonHtml = isAdded 
        ? `<div class="ml-4 px-6 py-2 bg-success-100 text-success-800 rounded-lg font-medium flex items-center">
             <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
               <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
             </svg>
             Added
           </div>`
        : `<button
             data-server-id="${server.id}"
             class="add-server-btn ml-4 px-6 py-2 bg-selected text-text-inverse rounded-lg hover:bg-selected/90 focus:outline-none focus:ring-2 focus:ring-selected focus:ring-offset-2 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
           >
             Add to Desktop
           </button>`;

      serverCard.innerHTML = `
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <div class="flex items-center">
              <div class="w-12 h-12 rounded-lg bg-selected flex items-center justify-center text-text-inverse text-xl font-bold">
                ${server.name.charAt(0).toUpperCase()}
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-text-primary">${escapeHtml(server.name)}</h3>
                <p class="text-sm text-text-secondary">${server.isPublic ? 'Public' : 'Private'} ‚Ä¢ ${server.role}</p>
              </div>
            </div>
            ${server.description ? `<p class="mt-3 text-text-secondary">${escapeHtml(server.description)}</p>` : ''}
            <div class="mt-4 flex items-center space-x-4 text-sm text-text-secondary">
              <span>üë• ${server.memberCount} members</span>
              <span>üí¨ ${server.roomCount} rooms</span>
            </div>
          </div>
          ${buttonHtml}
        </div>
      `;

      // Add event listener if not added
      if (!isAdded) {
        const button = serverCard.querySelector('.add-server-btn') as HTMLButtonElement;
        button.addEventListener('click', async () => {
          await addServerToDesktop(server.id, button);
        });
      }

      return serverCard;
    }

    // Add server to desktop
    async function addServerToDesktop(serverId: number, button: HTMLButtonElement) {
      button.disabled = true;
      button.textContent = 'Adding...';

      try {
        // First, mark the server as added in the database
        const markAddedResponse = await fetch(`${apiUrl}/discovery/servers/${serverId}/add`, {
          method: 'POST',
          headers: {
            'Authorization': `Bearer ${authToken}`,
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ client_type: 'desktop' }),
          credentials: 'include',
        });

        if (!markAddedResponse.ok) {
          throw new Error('Failed to mark server as added');
        }

        // Then prepare the desktop connection
        const response = await fetch(`${apiUrl}/discovery/prepare-desktop/${serverId}`, {
          method: 'POST',
          headers: {
            'Authorization': `Bearer ${authToken}`,
            'Content-Type': 'application/json',
          },
          credentials: 'include',
        });

        if (!response.ok) {
          throw new Error('Failed to prepare server connection');
        }

        const data = await response.json();
        const connectionData = data.data;

        console.log('üì¶ Connection data:', connectionData);

        // Encode connection data as base64
        const encodedData = btoa(JSON.stringify(connectionData));
        
        const protocolUrl = `quorum://add-server?data=${encodedData}`;
        console.log('üîó Redirecting to:', protocolUrl);
        console.log('üìã Connection data JSON:', JSON.stringify(connectionData, null, 2));

        // Redirect to custom protocol with connection data
        window.location.href = protocolUrl;

        // Show success message
        showSuccess();
        button.textContent = 'Added ‚úì';
        button.classList.remove('bg-selected', 'hover:bg-selected/90');
        button.classList.add('bg-success-600');
      } catch (error) {
        console.error('Error adding server:', error);
        showError('Failed to add server. Please try again.');
        button.disabled = false;
        button.textContent = 'Add to Desktop';
      }
    }

    // Show error
    function showError(message: string) {
      const errorDiv = document.getElementById('error')!;
      const errorMessage = document.getElementById('error-message')!;
      const loading = document.getElementById('loading')!;

      loading.classList.add('hidden');
      errorMessage.textContent = message;
      errorDiv.classList.remove('hidden');
    }

    // Show success
    function showSuccess() {
      const successDiv = document.getElementById('success')!;
      successDiv.classList.remove('hidden');
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    // Escape HTML to prevent XSS
    function escapeHtml(text: string): string {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Invite code modal handlers
    const inviteModal = document.getElementById('invite-modal')!;
    const inviteInput = document.getElementById('invite-code-input') as HTMLInputElement;
    const inviteError = document.getElementById('invite-error')!;
    const inviteSubmitBtn = document.getElementById('invite-submit-btn') as HTMLButtonElement;
    const inviteCancelBtn = document.getElementById('invite-cancel-btn')!;
    const joinInviteBtn = document.getElementById('join-invite-btn')!;

    joinInviteBtn.addEventListener('click', () => {
      inviteModal.classList.remove('hidden');
      inviteInput.value = '';
      inviteError.classList.add('hidden');
      inviteInput.focus();
    });

    inviteCancelBtn.addEventListener('click', () => {
      inviteModal.classList.add('hidden');
    });

    inviteSubmitBtn.addEventListener('click', async () => {
      const code = inviteInput.value.trim();
      if (!code) {
        inviteError.textContent = 'Please enter an invite code';
        inviteError.classList.remove('hidden');
        return;
      }

      inviteSubmitBtn.disabled = true;
      inviteSubmitBtn.textContent = 'Joining...';
      inviteError.classList.add('hidden');

      try {
        const response = await fetch(`${apiUrl}/servers/join/${code}`, {
          method: 'POST',
          headers: {
            'Authorization': `Bearer ${authToken}`,
            'Content-Type': 'application/json',
          },
          credentials: 'include',
        });

        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.error || 'Failed to join server');
        }

        // Reload the page to show the new server
        window.location.reload();
      } catch (error) {
        console.error('Error joining server:', error);
        inviteError.textContent = error instanceof Error ? error.message : 'Failed to join server';
        inviteError.classList.remove('hidden');
        inviteSubmitBtn.disabled = false;
        inviteSubmitBtn.textContent = 'Join Server';
      }
    });

    // Close modal on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !inviteModal.classList.contains('hidden')) {
        inviteModal.classList.add('hidden');
      }
    });

    // Close modal when clicking outside
    inviteModal.addEventListener('click', (e) => {
      if (e.target === inviteModal) {
        inviteModal.classList.add('hidden');
      }
    });

  </script>
</Layout>

