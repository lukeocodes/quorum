---
import '../styles/global.css';
import { AccountSwitcher } from '@/components/AccountSwitcher';

interface Props {
  title: string;
  description?: string;
  showAccountSwitcher?: boolean;
}

const { 
  title, 
  description = 'Quorum - A Slack-like app for discussions between humans and AIs',
  showAccountSwitcher = false 
} = Astro.props;

const apiUrl = import.meta.env.PUBLIC_API_CORE_URL || 'http://localhost:3000';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-off-white text-text-primary">
    {showAccountSwitcher && (
      <header class="bg-off-white border-b border-border sticky top-0 z-40">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center h-16">
            <div class="flex items-center">
              <a href="/" class="text-2xl font-bold text-text-primary">
                Quorum
              </a>
            </div>
            <div class="flex items-center">
              <AccountSwitcher client:load apiUrl={apiUrl} />
            </div>
          </div>
        </div>
      </header>
    )}
    <slot />
  </body>
</html>

