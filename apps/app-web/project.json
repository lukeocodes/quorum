{
  "name": "app-web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/app-web/src",
  "projectType": "application",
  "tags": [
    "npm:private",
    "npm:astro",
    "npm:react",
    "npm:web",
    "npm:chat",
    "type:app",
    "platform:web",
    "scope:frontend"
  ],
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm --filter @quorum/api-core dev",
            "forwardAllArgs": false
          },
          {
            "command": "pnpm --filter @quorum/api-server dev",
            "forwardAllArgs": false
          },
          {
            "command": "pnpm --filter @quorum/api-user dev",
            "forwardAllArgs": false
          },
          {
            "command": "pnpm --filter @quorum/app dev",
            "forwardAllArgs": false
          },
          {
            "command": "pnpm --filter @quorum/app-web dev",
            "forwardAllArgs": false
          },
          {
            "command": "pnpm --filter @quorum/console dev",
            "forwardAllArgs": false
          }
        ],
        "parallel": true
      },
      "dependsOn": [
        "proto:build",
        "platform:build",
        "app-state:build",
        "api-client-auth:build",
        "api-client-user:build",
        "theme:build",
        "utils:build"
      ]
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/apps/app-web/dist"
      ],
      "options": {
        "command": "pnpm --filter @quorum/app-web build",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": [
        "^build"
      ]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @quorum/app-web preview",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": [
        "build"
      ]
    }
  }
}

