---
/**
 * Auth Callback Page
 * 
 * Receives session data from the console when user adds a server to the web app.
 * Similar to how Electron receives data via the quorum:// protocol.
 */
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Adding Server... - Quorum">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-50 to-primary-100">
    <div class="text-center">
      <div id="loading" class="space-y-4">
        <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-selected"></div>
        <p class="text-text-secondary">Setting up your session...</p>
      </div>
      
      <div id="error" class="hidden space-y-4">
        <div class="w-16 h-16 mx-auto bg-danger-100 rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-danger-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-text-primary">Something went wrong</h2>
        <p id="error-message" class="text-text-secondary"></p>
        <a href="/" class="inline-block mt-4 px-6 py-2 bg-selected text-text-inverse rounded-lg hover:bg-selected/90">
          Go to Home
        </a>
      </div>
      
      <div id="success" class="hidden space-y-4">
        <div class="w-16 h-16 mx-auto bg-success-100 rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-success-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-text-primary">Server Added!</h2>
        <p class="text-text-secondary">Redirecting to your workspace...</p>
      </div>
    </div>
  </div>
  
  <script>
    import { addWebSession } from '../../adapters/webAdapter';
    import type { UserSession } from '@quorum/app-state';
    
    const API_CORE_URL = import.meta.env.PUBLIC_API_CORE_URL || 'http://localhost:3000';
    
    const loadingEl = document.getElementById('loading')!;
    const errorEl = document.getElementById('error')!;
    const errorMessageEl = document.getElementById('error-message')!;
    const successEl = document.getElementById('success')!;
    
    function showError(message: string) {
      loadingEl.classList.add('hidden');
      errorEl.classList.remove('hidden');
      errorMessageEl.textContent = message;
    }
    
    function showSuccess() {
      loadingEl.classList.add('hidden');
      successEl.classList.remove('hidden');
    }
    
    async function handleCallback() {
      try {
        // Get data from URL parameters
        const params = new URLSearchParams(window.location.search);
        const dataParam = params.get('data');
        
        if (!dataParam) {
          showError('Missing session data. Please try adding the server again from the console.');
          return;
        }
        
        // Decode the connection data (base64 encoded JSON)
        let connectionData;
        try {
          const jsonData = atob(dataParam);
          connectionData = JSON.parse(jsonData);
        } catch (e) {
          showError('Invalid session data. Please try again.');
          return;
        }
        
        console.log('ðŸ“¨ Received connection data:', {
          server: connectionData.server?.name,
          user: connectionData.user?.username,
        });
        
        // Validate the connection data
        if (!connectionData.user || !connectionData.authToken || !connectionData.server) {
          showError('Incomplete session data. Please try again.');
          return;
        }
        
        // Create session object matching UserSession interface
        const session: UserSession = {
          id: connectionData.user.id,
          userId: connectionData.user.id,
          username: connectionData.user.username,
          email: connectionData.user.email,
          displayName: connectionData.user.displayName,
          avatarColor: connectionData.user.avatarColor,
          authToken: connectionData.authToken,
          apiUrl: connectionData.apiUrl || API_CORE_URL,
          isActive: true,
        };
        
        // Mark the server as added via API (if not already added)
        try {
          const response = await fetch(`${session.apiUrl}/discovery/servers/${connectionData.server.id}/add`, {
            method: 'POST',
            headers: {
              'Authorization': `Bearer ${session.authToken}`,
              'Content-Type': 'application/json',
            },
          });
          
          if (response.ok) {
            console.log('âœ… Server marked as added in API');
          } else {
            console.warn('âš ï¸  Server may already be added:', response.status);
          }
        } catch (error) {
          console.warn('âš ï¸  Could not sync with API:', error);
          // Continue anyway - the session is still valid
        }
        
        // Store the session using addWebSession
        // This will trigger the quorum:session-added event that WebShell listens to
        addWebSession(session, connectionData.server.id);
        
        console.log('âœ… Session stored, redirecting...');
        
        showSuccess();
        
        // Redirect to the main app after a short delay
        setTimeout(() => {
          window.location.href = '/';
        }, 1000);
        
      } catch (error) {
        console.error('Error in auth callback:', error);
        showError('An unexpected error occurred. Please try again.');
      }
    }
    
    // Run the callback handler
    handleCallback();
  </script>
</Layout>

